<h1>Articles</h1>

<div class="row">
  <% @categories.each do |category|%>
    <div class="col-md-4">
      <div class="card category-box">
       
      </div>
    </div>
  <%end%>
</div>

<% @articles.each do |article|%>
  <h2><%= article.name %></h2>
  <h4><%= article.description %></h4>
  <p><%= markdown article.body %></p>
  Created by: <%= article.user.name %>
<%end%>
<br>
<%= paginate @articles %>