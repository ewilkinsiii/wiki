<% @articles.each do |article|%>
    <h2 id=<%= "article-#{article.id}"%>><%= link_to article.name, group_category_article_path(@group, @category, article) %> 
    <% if !current_page?(search_group_categories_path)%>
        <button class= "clipboard-btn btn btn-primary"  data-clipboard-action="copy" data-clipboard-text=<%=  "#{ENV.fetch('APP_URL')}" + group_category_path(@group, @category,  anchor: "article-#{article.id}")%>>
            <%= fa_icon("link")%>
        </button>
    <%end%>
    </h2>
    <h4><%= article.description %></h4>
    
    Created by: <%= article.user.email %>
    <span class="badge btn-primary"><%= article.category.name%></span>
    <hr>
<%end%>
<br>
<%= paginate @articles %>