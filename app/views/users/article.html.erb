<div class="uk-section section-sub-nav uk-padding-remove">
  <div class="uk-container">
    <div uk-grid>
      <div class="uk-width-2-3@m">
        <ul class="uk-breadcrumb uk-visible@m">
          <li><%= link_to "Home", root_path %></li>
          <li><span><%= current_user.name%></span></li>
        </ul>
      </div>
      
    </div>
    <div class="border-top"></div>
  </div>
</div>

<div class="uk-section uk-section-small uk-padding-remove-bottom section-content">
  <div class="uk-container uk-position-relative">
    <div uk-grid>
      <div class="uk-width-3-4@m">
        <article class="uk-article">
          <header>
            <h1 class="uk-article-title uk-margin-bottom"><%= current_user.name%>'s Authored Articles</h1>
          </header>
          <% @articles.each do |article|%>
          <h2><%= link_to article.name, group_category_article_path(@group, Category.find(article.category_id), article) %></h2>
          <h4><%= article.description %></h4>
          Created by: <%= article.user.email %>
          <%end%>
          <%= paginate @articles %>
          <%= link_to "Back", :back, class: "btn btn-primary" %>
        </article>
      </div>
    </div>
  </div>
</div>