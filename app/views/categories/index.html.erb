<div class="uk-section">
  <div class="uk-container">
    <div class="uk-child-width-1-3@s uk-grid-match uk-grid-medium uk-text-center" uk-grid>
      <% @categories.each do |category|%>
        <div>
          <%=link_to "#{category.name.capitalize}", category_path(category), class: "box uk-border-rounded"%> 
        </div>
      <%end%>
    </div>
  </div>
</div>

<div class="uk-section uk-padding-remove-top uk-padding-remove-bottom">
  <div class="uk-container">
    <hr>
  </div>
</div>

<div class="uk-section">
  <div class="uk-container">
    <div class="uk-child-width-1-2@s text-dark" uk-grid>
      <div>
        <h3>Popular Articles</h3>
        <ul class="uk-list uk-list-large uk-list-divider link-icon-right">
          <% @popular_articles.each do |article|%>
            <li><%= link_to article.name, category_article_path(Category.find(article.category_id), article)%></li>
          <%end%>
        </ul>
      </div>
      <div>
        <h3>Recent Articles</h3>
        <ul class="uk-list uk-list-large uk-list-divider link-icon-right">
          <% @recent_articles.each do |article|%>
            <li><%= link_to article.name, category_article_path(Category.find(article.category_id), article)%></li>
          <%end%>
        </ul>
      </div>
    </div>
  </div>
</div>