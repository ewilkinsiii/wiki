    <p>
    <%= hidden_field_tag "category_id", @category.id %>
    <%=text_field_tag :search, params[:search], class: "form-control", placeholder: "Hit enter to search..." %>
    <%= button_tag("Search", name: nil, class: "search-button") do%>
      <%= fa_icon "search"%>
    <%end%>
    </p>
 <%end%>   
</aside>